<%- include('parts/head') -%>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include('parts/nav') -%>
        <div class="col-sm-10">
          <h1> Genre: <%= genre.name %></h1>

          <% if (genre_books.length) { %>
            <h2> Books </h1>

            <dl>
              <% genre_books.forEach(book => { %>
                <dt>
                  <a href="<%= book.url %>"><%= book.title %></a>
                </dt>
                <dd><%= book.summary %></dd>
              <% }) %>
            </dl>
          <% } else { %>
            <span>This genre has no books</span>
          <% } %>

          <hr>

          <a href="<%= `${genre.url}/delete` %>">Delete genre</a>

          <hr>

          <a href="<%= `${genre.url}/update` %>">Update genre</a>

          <hr>
        </div>
      </div>
    </div>
  </body>
</html>
