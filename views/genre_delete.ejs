<%- include('parts/head') -%>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include('parts/nav') -%>
        <div class="col-sm-10">
          <h1> Genre: <%= genre.name %></h1>

          <% if (genre_books.length) { %>
            <p><b>Delete the following books before attempting to delete this genre:</b></p>

            <dl>
              <% genre_books.forEach(book => { %>
                <dt>
                  <a href="<%= book.url %>"><%= book.title %></a>
                </dt>
                <dd><%= book.summary %></dd>
              <% }) %>
            </dl>
          <% } else { %>
            <form method="POST" action=''>
              <p>Do you really want to delete this genre?</p>
              <input type="hidden" value="<%= genre._id %>" name="genre_id"/>
              <button class="btn btn-primary" type="submit">Delete</button>
            </form>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
