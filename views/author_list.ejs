<%- include('parts/head') -%>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include('parts/nav') -%>
        <div class="col-sm-10">
          <h1> <%= title %></h1>

          <% if (author_list.length) { %>
            <ul>
              <% author_list.forEach(author => { %>
                <li>
                  <a href="<%= author.url %>"><%= author.name %></a>
                  <% if (author.lifespan) { %>
                    (<%= author.lifespan %>)
                  <% } %>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <span>There are no authors.</span>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
