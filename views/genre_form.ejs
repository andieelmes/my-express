<%- include('parts/head') -%>
  <body>
    <div class="container-fluid">
      <div class="row">
        <%- include('parts/nav') -%>
        <div class="col-sm-10">
          <h1><%= title %></h1>

          <form method="POST" action=''>
            <div class="form-group">
              <label for="name">Genre: </label>
              <input
                id="name"
                class="form-control"
                type="text"
                placeholder="Fantasy, Poetry etc."
                name="name"
                value="<%= locals.genre ? genre.name: ''%>"
              />
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
          </form>

          <% if (locals.errors) { %>
            <ul>
              <% errors.forEach(error => { %>
                <li><%= error.msg %> </li>
              <% }) %>
            </ul>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
